{
  "name": "eva",
  "version": "1.0.0",
  "description": "general purpose API for managing daily life data",
  "main": "./src/index.js",
  "scripts": {
    "start": "NODE_ENV=prod node ./src/index.js",
    "dev": "docker-compose up",
    "build": "docker-compose build",
    "test": "NODE_ENV=test jest --verbose --silent",
    "migration:generate": "sequelize-cli migration:generate --name",
    "migration:run": "sequelize-cli db:migrate",
    "migration:undo": "sequelize-cli db:migrate:undo",
    "seed:generate": "sequelize-cli seed:generate",
    "seed:run": "sequelize-cli db:seed",
    "seed:undo": "sequelize-cli db:seed:undo"
  },
  "repository": "git@github.com:FelipeAsenjo/eva.git",
  "author": "Felipe Asenjo <felipe.asenjo2@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.19",
    "sequelize-cli": "^6.4.1"
  }
}
